
<div class="card-columns card-count parent-card">

{{#each userData as |users|}}
  <div class="card">
    <div class="card-body text-center">
      <div {{action 'onClickofUser' users}}>
    <img src="userPhoto.jpg" width = '50' height='50'>
      <p id= "val" class="card-text"> {{users.login}}{{users.id}}</p>
      {{#if (eq users.site_admin true)}}
      <p id= "val" class="card-text">Site Admin</p>
      {{/if}}
    </div>
      <button type="button" class="header_back_Search" {{action 'onToShortlist' users}}>Add</button>

      <button type="button" class="header_back_Search" {{action 'onCancel'}}>Cancel</button>

    </div>
  </div>
  {{/each}}
</div>
